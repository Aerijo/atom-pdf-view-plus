{
  "name": "pdf-view-plus",
  "main": "./dist/main.js",
  "version": "1.0.3",
  "description": "Atom PDF viewer based on PDF.js",
  "repository": "https://github.com/Aerijo/atom-pdf-view-plus",
  "license": "MIT",
  "engines": {
    "atom": ">=1.40.1 <2.0.0"
  },
  "files": [
    "/dist",
    "/vendor",
    "/styles",
    "!/**/*.js.map",
    "!/vendor/pdfjs/web/debugger.js"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run lint && npm shrinkwrap && git add . && git push && rm -rf ./dist && tsc --declarationMap false --inlineSourceMap false --inlineSources false",
    "lint": "prettier --check --ignore-path .gitignore **/*",
    "fix-lint": "prettier --check --write --ignore-path .gitignore **/*",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "atom-ts-transpiler": "^1.5.2",
    "typescript": "^3.5.3"
  },
  "deserializers": {
    "PdfEditor": "deserialize"
  },
  "atomTranspilers": [
    {
      "transpiler": "atom-ts-transpiler",
      "glob": "{!(node_modules)/**/,}*.ts?(x)",
      "options": {
        "compilerOptions": {},
        "cacheKeyFiles": [],
        "verbose": false
      }
    }
  ],
  "configSchema": {
    "closeViewWhenFileDeleted": {
      "type": "boolean",
      "default": false,
      "description": "Set to true to automatically close the PDF tab when the disk file is deleted"
    },
    "fileExtensions": {
      "type": "array",
      "default": [
        "pdf",
        "ai"
      ],
      "title": "PDF file extensions",
      "description": "Files with these extensions will be opened as PDFs.",
      "items": {
        "type": "string"
      }
    }
  },
  "devDependencies": {
    "@types/atom": "^1.36.1",
    "@types/node": "^12.7.2",
    "prettier": "1.18.2",
    "tslib": "^1.10.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "^3.5.3"
  }
}
